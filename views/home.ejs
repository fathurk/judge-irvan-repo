<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <title>Home</title>
</head>

<body>
  <%- include('partials/navbar') %>
    <div class="container">
      <div class="row align-items-center">
        <div class="col-1">
          <form action="/?name=?artist" method="GET">
            <input type="text" name="name" class="search" placeholder="Search name here!">
            <input type="text" name="category" class="search" placeholder="Search artist here!">
            <input type="submit" value="Search">
          </form>
        </div>
      </div>
    <br>
    <div class="container-lg">
      <div class="row d-flex justify-content-center">
        <% data.forEach((el, idx)=> { %>
          <div class="card col-3 p-4 m-1" style="width: 30rem;">
            <img src="<%= image[idx] %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">
                <%= el.name %>
              </h5>
              <p class="card-text">
                <%= el.description %>
              </p>
              <a href="/buyers/<%=el.id%>" class="btn btn-primary">See Detail</a>
              <a href="/buyers/<%= el.id %>/addtocart" class="btn btn-danger">Add to cart</a>
            </div>
          </div>
          <% }) %>
          <a href="/buyers/cart" class="btn btn-danger">Cart</a>
      </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>
</body>

</html>